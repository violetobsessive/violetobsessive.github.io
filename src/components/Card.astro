---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@/utils/slugify";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";

type Props = {
  variant?: "h2" | "h3";
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath } = Astro.props;

const { title, description, ...props } = data;
---

<li class="my-6">
  <a
    href={getPath(id, filePath)}
    aria-label={title}
    style={{ borderColor: "#987fdb" }}
    class:list={[
      // Card container
      "card-shade",
      "card-border",
      "group border-skin-line bg-skin-fill block rounded-2xl border",
      "p-6 shadow-sm transition",
      "hover:-translate-y-0.5 hover:shadow-md",
      "focus-visible:ring-offset-skin-fill focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2",
    ]}
  >
    <Heading
      style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
      class:list={[
        "text-skin-base text-xl font-semibold",
        "group-hover:text-accent",
      ]}
    >
      {title}
    </Heading>

    <div class="text-skin-muted mt-2 text-sm">
      <Datetime {...props} />
    </div>

    <p class="text-skin-base/90 mt-3">
      {description}
    </p>
  </a>
</li>
